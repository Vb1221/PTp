
<article class = 'card'>
  <div class = 'card-text'>
    <h1 class = "mb-4" ><%= @question.title %></h1>
  </div>
</article>

<p class = 'card-time'>
  <%= @question.formated_created_at %>
</p>

<article class = 'card'>
  <p class="card-text lead my-3">
    <%= @question.body %>
  </p>
</article>  
<div class = 'mb-3'>
<%= link_to 'Edit', edit_question_path(@question), class: 'btn btn-secondary' %>
</div>
<div class = 'mb-3'>
<%= button_to 'Delete', question_path(@question), class: 'btn  btn-danger btn-sm', form: { data: { turbo_confirm: "Are you sure?" } }, method: :delete %>
</div>

    <div class = 'mt-4' >
      <h1 align = 'center'> Text Here </h1>
    </div>

<%= form_with model: [@question, @answer] do |f| %>
  <div class = 'mb-3 row'>
    <div class = 'col-sm-10'>
      <%= f.text_area :body, class: 'form-control', placeholder: "Text here", required: true, minlength: 4 %>
    </div>
  </div>
<hr>
<div class = 'col-md-4'>
  <%= f.submit 'Sumbit', class: 'btn btn-primary' %>
</div>
<%end%>

<h1 align = 'center' class = 'mt-5'> Comment </h1>

<% @answers.each do |answer| %>
  <p class = 'card-time'>
    <%= answer.formated_created_at %>
  </p>
  <article class = 'mb-3'>
  <p>
  <%= answer.body %>
  </p>

  <%= button_to 'Delete', question_answer_path(@question, answer), class: 'btn  btn-danger btn-sm', form: { data: { turbo_confirm: "Are you sure?" } }, method: :delete %>
</article>
<%end%>