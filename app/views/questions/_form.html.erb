<%= form_with model: @question do |f| %>

<div class = "mb-3">
  <div class = "col-sm-10">
    <%= f.text_field :title, required: true, minlength: 2, placeholder: "Title", class: "form-control" %>
  </div>
</div>

<div class = "col-sm-10">
  <%= f.text_area :body, required: true, minlength: 4, placeholder: "Body", class: "form-control" %>
</div>

<p class = 'mt-2'>
  <%= f.submit "Submit", class: 'btn btn-primary' %>
</p>
<%end%>