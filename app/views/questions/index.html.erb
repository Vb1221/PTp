<% provide :page_title, 'Questions' %>
<% currently_at 'Questions' %>
<h1>Questions</h1>

 <%= link_to "New Question", new_question_path, class: 'btn btn-primary btn-m mb-2' %>
<%= paginate @questions %>
    <% @questions.each do |question| %>
      <article class = "card">
        <div class = "card-body">
          <h4><%= question.title %></h4>
            <section class = "card-text">
              <time datatime="<%= question.formated_created_at %>">
                <%= question.formated_created_at %>
              </time>
                
              <p class = 'my-2'>
                <%= truncate strip_tags(question.body), length: 80 %>
              </p>
            </section>

      <%= link_to 'Edit', edit_question_path(question), class: 'btn btn-primary'  %>
      <%= link_to 'Show', question_path(question), class: 'btn btn-secondary'  %>
      <%= button_to 'Delete', question_path(question), class: 'btn  btn-danger btn-sm', form: { data: { turbo_confirm: "Are you sure?" } }, method: :delete %>
    </div>
  </article>
<%end%>

<%= paginate @questions %>